{
    "background": {
        "scripts": [
            "./scripts/background.js"
        ]
    },
    "browser_action": {
        "default_popup": "./index.html",
        "default_icon": {
            "16": "./assets/icon.svg",
            "48": "./assets/icon.svg",
            "128": "./assets/icon.svg"
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "shortsdeflector@addons.com"
        }
    },
    "default_locale": "en",
    "description": "__MSG_extensionDescription__",
    "icons": {
        "16": "./assets/icon.svg",
        "48": "./assets/icon.svg",
        "128": "./assets/icon.svg"
    },
    "manifest_version": 2,
    "name": "Shorts Deflector",
    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "https://www.youtube.com/*"
    ],
    "version": "1.8.0_firefox"
}