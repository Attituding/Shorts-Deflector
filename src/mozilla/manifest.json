{
    "name": "Shorts Deflector",
    "description": "A browser extension that redirects youtube.com/shorts/xyz to youtube.com/watch?v=xyz",
    "version": "1.0.1",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "./scripts/background.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "shortsdeflector@addons.com"
        }
    },
    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://www.youtube.com/*"
    ],
    "browser_action": {
        "default_popup": "./main.html",
        "default_icon": {
            "16": "./assets/Shorts Deflector Icon 16.png",
            "32": "./assets/Shorts Deflector Icon 32.png",
            "48": "./assets/Shorts Deflector Icon 48.png",
            "128": "./assets/Shorts Deflector Icon 128.png"
        }
    },
    "icons": {
        "16": "./assets/Shorts Deflector Icon 16.png",
        "32": "./assets/Shorts Deflector Icon 32.png",
        "48": "./assets/Shorts Deflector Icon 48.png",
        "128": "./assets/Shorts Deflector Icon 128.png"
    }
}