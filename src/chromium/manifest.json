{
    "name": "Shorts Deflector",
    "description": "Redirect YouTube Shorts to the normal desktop interface.",
    "version": "1.0.3",
    "manifest_version": 3,
    "background": {
        "service_worker": "./scripts/background.js"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "shorts",
                "enabled": true,
                "path": "./netRequestRule.json"
            }
        ]
    },
    "permissions": [
        "declarativeNetRequestWithHostAccess",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://www.youtube.com/"
    ],
    "action": {
        "default_popup": "./main.html",
        "default_icon": {
            "16": "./assets/Shorts Deflector Icon 16.png",
            "32": "./assets/Shorts Deflector Icon 32.png",
            "48": "./assets/Shorts Deflector Icon 48.png",
            "128": "./assets/Shorts Deflector Icon 128.png"
        }
    },
    "icons": {
        "16": "./assets/Shorts Deflector Icon 16.png",
        "32": "./assets/Shorts Deflector Icon 32.png",
        "48": "./assets/Shorts Deflector Icon 48.png",
        "128": "./assets/Shorts Deflector Icon 128.png"
    }
}