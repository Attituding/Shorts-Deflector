{
    "name": "shorts-deflector",
    "description": "Seamlessly play YouTube Shorts with the normal desktop interface.",
    "license": "MIT",
    "author": "Attituding <attituding@outlook.com>",
    "devDependencies": {
        "@types/chrome": "^0.0.196",
        "@typescript-eslint/eslint-plugin": "^5.36.1",
        "@typescript-eslint/parser": "^5.36.1",
        "eslint": "^8.23.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-plugin-import": "^2.26.0",
        "prettier-plugin-tailwindcss": "^0.1.13",
        "tailwindcss": "^3.1.8",
        "typescript": "^4.8.2"
    },
    "scripts": {
        "build": "npm run typescript && npm run tailwind",
        "tailwindcss": "tailwindcss -i ./resources/source.css -o ./src/chromium/resources/tailwind.css && npx tailwindcss -i ./resources/source.css -o ./src/firefox/resources/tailwind.css",
        "typescript": "tsc --outDir src",
        "assets": "xcopy \"./src/assets\" \"./src/vendors/chromium/assets\" /S /Y /I && xcopy \"./src/assets\" \"./src/vendors/firefox/assets\" /S /Y /I"
    }
}
