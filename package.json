{
    "name": "shorts-deflector",
    "description": "A browser extension that redirects youtube.com/shorts/xyz to youtube.com/watch?v=xyz",
    "license": "MIT",
    "author": "Attituding <Attituding@outlook.com>",
    "main": "src/main.ts",
    "devDependencies": {
        "@types/chrome": "^0.0.180",
        "@types/turndown": "^5.0.1",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "eslint": "^8.12.0",
        "eslint-config-airbnb": "19.0.4",
        "tailwindcss": "^3.0.23",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3"
    },
    "scripts": {
        "build": "tsc -p . && npx tailwindcss -i ./resources/source.css -o ./src/chromium/resources/tailwind.css && npx tailwindcss -i ./resources/source.css -o ./src/mozilla/resources/tailwind.css",
        "tailwind": "npx tailwindcss -i ./resources/source.css -o ./src/chromium/resources/tailwind.css && npx tailwindcss -i ./resources/source.css -o ./src/mozilla/resources/tailwind.css"
    }
}
